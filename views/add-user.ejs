<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Register</title>
    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="/main.css">
</head>

<section class="vh-50">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card shadow p-3">
                    <div class="card-body p-5">
                        <h1 class="text-uppercase text-center mb-5 display-4 fw-bold">Register</h1>
                        <!-- ... Register Form ... -->
                        <form action="/add-user" method="post">
                            <div class="form-outline mb-4">
                                <label for="username" class="form-label fs-4"><i
                                        class="fas fa-user fa-md me-3 fa-fw"></i>Your Name:</label>
                                <input id="username" type="text" name="user_name"
                                    class="form-control form-control-lg" />
                            </div>
                            <div class="d-flex justify-content-center ">
                                <button type="submit" class="btn btn-dark btn-block btn-lg text-white">Create User
                                    Account</button>
                            </div>
                        </form>
                        <!-- ... Register Form ends ... -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

</body>

</html>